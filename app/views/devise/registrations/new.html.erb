<div class="main_container col-6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="header_element d-flex justify-content-between align-items-center  p-2 mb-4">
<%= link_to root_path  do %>
  <i class="bi bi-arrow-left text-white h3"></i>
<% end %>

<h2>Register</h2>
  <div class="actions text-center mt-3">
    <%= f.submit "Sign up",  class: "next_el"%>
  </div>
</div>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="form-group bg-white d-flex flex-row p-2">
  <div class="input-group">
    <div class="input-group-prepend p-2">
      <span class="input-group-text rounded-circle ">
        <i class="bi bi-person h1"></i>
      </span>
    </div>
    <%= f.text_field :image, class: "form-control form-control-lg",  placeholder: "Upload picture" %>
  </div>
</div>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Full name" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Password" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Repeat password" %>
  </div>
<% end %>
</div>
